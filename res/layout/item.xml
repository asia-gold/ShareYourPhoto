<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_color"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_address"
            android:textSize="@dimen/tv_item_address"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_subject"
            android:textSize="@dimen/tv_item_subject"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_weight="0.73"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvItemAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:text="@string/str_address"
            android:textSize="@dimen/tv_item_address"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvItemSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_subject"
            android:textSize="@dimen/tv_item_subject"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivItemPhoto"
        android:layout_width="@dimen/iv_item_photo_width"
        android:layout_height="@dimen/iv_item_photo_height"
        android:gravity="center_vertical"
        android:src="@drawable/camera" />

</LinearLayout>